_build: &_build
  stage: build-binary
  deploy:
  - provider: releases
    api_key: "$GITHUB_OAUTH_TOKEN"
    skip_cleanup: true
    "on":
      tags: true
    file_glob: true
    file: artifacts/*
  - provider: script
    skip_cleanup: true
    "on":
      tags: true
      condition: ${DOCKER_BUILT} = true
    script: ${TRAVIS_BUILD_DIR}/deploy_docker.sh
  - provider: script
    skip_cleanup: true
    "on":
      tags: false
      condition: ( ${DOCKER_BUILT} == true ) && ( ${ARCH_LABEL} == "amd64" )
    script: ${TRAVIS_BUILD_DIR}/deploy_docker-debug.sh
  before_script:
  - export ALT_BRANCH=$(tail -n1 ${TRAVIS_BUILD_DIR}/VERSIONS)
  - export REMOTE_BRANCH=${TRAVIS_TAG:-${ALT_BRANCH}}
  - if [[ -n "${BUILD_CC}" ]]; then export CC=${BUILD_CC} ; fi
  - if [[ -n "${BUILD_CXX}" ]]; then export CXX=${BUILD_CXX} ; fi
  - if [[ -n "${BUILD_GOARM}" ]]; then export GOARM=${BUILD_GOARM} ; fi
  - if [[ -n "${BUILD_CC}${BUILD_CXX}" || "${GOARCH}" != "${BUILD_GOARCH}" ]]; then export CGO_ENABLED=1 ; fi
  - export GOOS=${BUILD_GOOS}
  - export GOARCH=${BUILD_GOARCH}
  - echo "GOOS ${GOOS}, GOARCH ${GOARCH}, ARCH_LABEL ${ARCH_LABEL}, REMOTE_BRANCH ${REMOTE_BRANCH}, CC ${CC}, ALT_BRANCH ${ALT_BRANCH}"
  - git clone -q --branch=${REMOTE_BRANCH} https://github.com/gravitational/teleport.git ${GOPATH}/src/github.com/gravitational/teleport && cd ${GOPATH}/src/github.com/gravitational/teleport && git checkout -qf ${REMOTE_BRANCH} 
  script:
  - go env
  - cd ${GOPATH}/src/github.com/gravitational/teleport && make release && bash ${TRAVIS_BUILD_DIR}/rename.sh
  - if [[ ${BUILD_GOOS} == "linux" && -e ${TRAVIS_BUILD_DIR}/Dockerfile.${ARCH_LABEL} ]]; then cd ${TRAVIS_BUILD_DIR} && mkdir temp/ && tar -xvf artifacts/teleport-*.tar.gz -C ./temp --strip-components=1 teleport/teleport teleport/tctl teleport/tsh ; fi
  - if [[ ${BUILD_GOOS} == "linux" && -e ${TRAVIS_BUILD_DIR}/Dockerfile.${ARCH_LABEL} ]]; then cd ${TRAVIS_BUILD_DIR} && docker build --pull --no-cache -t ${DOCKER_TAG}:${ARCH_LABEL}-${REMOTE_BRANCH} -f Dockerfile.${ARCH_LABEL} . && export DOCKER_BUILT=true ; fi
#  - if [[ -n "${TRAVIS_TAG}" && "${DOCKER_BUILT}" == "true" ]]; then docker save --output "${TRAVIS_BUILD_DIR}/artifacts/teleport-${REMOTE_BRANCH}-${BUILD_GOOS}-${ARCH_LABEL}.docker.tar" ${DOCKER_TAG}:${ARCH_LABEL}-${REMOTE_BRANCH} ; fi
# TODO: Wonder if I should adjust this to build binaries within alpine docker for wider compatability
# TODO: Maybe archive the docker images on the github release as well?
# TODO: See about building deb packages as well for Ubuntu and Raspbian
  after_success:
  - find ${TRAVIS_BUILD_DIR}/artifacts
  - cd ${TRAVIS_BUILD_DIR}

_arm_pkgs: &_arm_pkgs
  addons:
    apt:
      update: true
      packages:
      - gcc-multilib
      - gcc-4.7-arm-linux-gnueabi
      - gcc-arm-linux-gnueabi
      - libc6-armel-cross
      - libc6-dev-armel-cross
      - libc6-armhf-armel-cross
      - libc6-dev-armhf-armel-cross

_arm64_pkgs: &_arm64_pkgs
  addons:
    apt:
      update: true
      packages:
#      - gcc-multilib
      - gcc-aarch64-linux-gnu
      - gcc-4.8-aarch64-linux-gnu
      - libc6-arm64-cross
      - libc6-dev-arm64-cross

_386_pkgs: &_386_pkgs
  addons:
    apt:
      update: true
      packages:
      - gcc-multilib
      - libc6-dev-i386

_windows_pkgs: &_windows_pkgs
  addons:
    apt:
      update: true
      packages:
      - gcc-multilib
#      - mingw-w64
      - gcc-mingw-w64

